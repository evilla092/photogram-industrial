<div class="row">
  <div class="col-md-6 offset-3">
    <h1>
      <%= @user.username %>
    </h1>
    <h2>Followers</h2>

    <%= render "shared/tabs" %>
  </div>
</div>
<ul class="list-group col-md-6 offset-3">
<%  @user.followers.each do |follower| %>
  <li class="list-group-item"> 
  <%= link_to follower.username, user_path(follower.username) %>
  </li>
<% end %>
</ul>
