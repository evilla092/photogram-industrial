<div class="row">
  <div class="col-md-6 offset-3">
    <h1>
      <%= @user.username %>
    </h1>
    <h2>Following</h2>

    <%= render "shared/tabs" %>
  </div>
</div>
<ul class="list-group col-md-6 offset-3">
<% @user.leaders.each do |leader|%>
  <li class="list-group-item"> 
  <%= link_to leader.username, user_path(leader.username) %>
  </li>
<% end %>
</ul>
